<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_dialog">

    <TextView
        style="@style/large_title"
        android:text="Chỉnh sửa biên tập viên" />

    <TextView
        style="@style/small_title"
        android:text="Ảnh CMND/CCCD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/editHinhAnhBTV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btv" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnChonHinhAnhEditBTV"
            android:text="Chọn hình"
            android:textAllCaps="false"
            android:background="@drawable/bg_green_yellow"/>
    </LinearLayout>

    <TextView
        style="@style/small_title"
        android:text="Mã biên tập viên" />

    <EditText
        android:id="@+id/editMaBTV"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="8dp"
        android:enabled="false"
        android:background="@drawable/img"
        android:padding="5dp" />

    <TextView
        style="@style/small_title"
        android:text="Họ tên" />

    <EditText
        android:id="@+id/editHoTenBTV"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="8dp"
        android:background="@drawable/img"
        android:padding="5dp" />

    <TextView
        style="@style/small_title"
        android:text="Ngày sinh" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/editNgaySinhBTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img"
            android:padding="5dp"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="date"
            android:text="" />

        <ImageView
            android:id="@+id/ivDatePicker"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_date_range_24"
            android:backgroundTint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        style="@style/small_title"
        android:text="Số điện thoại" />

    <EditText
        android:id="@+id/editSdtBTV"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="8dp"
        android:background="@drawable/img"
        android:inputType="phone"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnLuu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/color_button"
            android:text="Lưu" />

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/color_button"
            android:text="Xóa" />
    </LinearLayout>
</LinearLayout>